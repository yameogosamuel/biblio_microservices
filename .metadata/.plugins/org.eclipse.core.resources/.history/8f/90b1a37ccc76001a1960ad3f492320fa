package ma.ac.inpt;

import java.util.ArrayList;
import java.util.stream.Stream;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;


import ma.ac.inpt.dao.CategoryRepository;
import ma.ac.inpt.entities.Category;

@SpringBootApplication
public class CategoryApplication {

	public static void main(String[] args) {
		SpringApplication.run(CategoryApplication.class, args);
	}
	
	@Bean
	CommandLineRunner start(CategoryRepository categoryRepository) {
		return args->{
			categoryRepository.deleteAll();
			Stream.of("C1 Roman roman","C2 Poesie poesie","C3 Théatre théatre","C4 Revue revue","C5 Journal journal").forEach(c->{
				categoryRepository.save(new Category(c.split(" ")[0],c.split(" ")[1],c.split(" ")[2],new ArrayList<>()) );
			});
			categoryRepository.findAll().forEach(System.out::println);
		};
	}

}
